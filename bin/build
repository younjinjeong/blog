#!/usr/bin/env bash

set -e

rm -rf public
echo "Production..." && hugo --quiet -b http://younjinjeong.io                    -d public/prod
echo "Staging..."    && hugo --quiet -b http://younjinjeong-staging.cfapps.io/    -d public/staging --buildDrafts
echo "Local..."      && hugo --quiet -b http://localhost                          -d public/local --buildDrafts $@

